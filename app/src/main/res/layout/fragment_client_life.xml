<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ClientLifeFragment"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="6dp"
        android:backgroundTint="#F44336">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvLifeOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="20"
                android:textSize="100sp"
                android:textColor="@color/black">
            </TextView>
            <ImageView
                android:id="@+id/ivMinusOther"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvLifeOther"
                app:layout_constraintTop_toTopOf="@id/tvLifeOther"
                app:layout_constraintBottom_toBottomOf="@id/tvLifeOther"
                android:src="@drawable/ic_minus">
            </ImageView>
            <ImageView
                android:id="@+id/ivPlusOther"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@id/tvLifeOther"
                app:layout_constraintTop_toTopOf="@id/tvLifeOther"
                app:layout_constraintBottom_toBottomOf="@id/tvLifeOther"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_plus">
            </ImageView>
            <ImageView
                android:id="@+id/ivAutorenewOther"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"
                android:src="@drawable/ic_autorenew">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="6dp"
        android:backgroundTint="#E91E63">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvLifeYou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="20"
                android:textSize="100sp"
                android:textColor="@color/black">
            </TextView>
            <ImageView
                android:id="@+id/ivMinusYou"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvLifeYou"
                app:layout_constraintTop_toTopOf="@id/tvLifeYou"
                app:layout_constraintBottom_toBottomOf="@id/tvLifeYou"
                android:src="@drawable/ic_minus">
            </ImageView>
            <ImageView
                android:id="@+id/ivPlusYou"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@id/tvLifeYou"
                app:layout_constraintTop_toTopOf="@id/tvLifeYou"
                app:layout_constraintBottom_toBottomOf="@id/tvLifeYou"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_plus">
            </ImageView>
            <ImageView
                android:id="@+id/ivAutorenewYou"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"
                android:src="@drawable/ic_autorenew">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>



</LinearLayout>