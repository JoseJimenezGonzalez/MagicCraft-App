<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_client"
    app:startDestination="@id/clientDeckFragment">

    <fragment
        android:id="@+id/clientChatFragment"
        android:name="com.jose.magiccraftapp.ui.fragment.ClientChatFragment"
        android:label="fragment_client_chat"
        tools:layout="@layout/fragment_client_chat" />
    <fragment
        android:id="@+id/clientDeckFragment"
        android:name="com.jose.magiccraftapp.ui.fragment.ClientDeckFragment"
        android:label="fragment_client_deck"
        tools:layout="@layout/fragment_client_deck" >
        <action
            android:id="@+id/action_clientDeckFragment_to_clientDeckManageFragment"
            app:destination="@id/clientDeckManageFragment" />
    </fragment>
    <fragment
        android:id="@+id/clientEventFragment"
        android:name="com.jose.magiccraftapp.ui.fragment.ClientEventFragment"
        android:label="fragment_client_event"
        tools:layout="@layout/fragment_client_event" />
    <fragment
        android:id="@+id/clientSettingFragment"
        android:name="com.jose.magiccraftapp.ui.fragment.ClientSettingFragment"
        android:label="fragment_client_setting"
        tools:layout="@layout/fragment_client_setting" />
    <fragment
        android:id="@+id/clientToolsFragment"
        android:name="com.jose.magiccraftapp.ui.fragment.ClientToolsFragment"
        android:label="fragment_client_tools"
        tools:layout="@layout/fragment_client_tools" />
    <fragment
        android:id="@+id/clientDeckManageFragment"
        android:name="com.jose.magiccraftapp.ui.fragment.ClientDeckManageFragment"
        android:label="fragment_client_deck_manage"
        tools:layout="@layout/fragment_client_deck_manage" />
</navigation>